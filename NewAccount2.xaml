<Page x:Class="MFA.NewAccount2"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:MFA"
      mc:Ignorable="d" 
      Title="NewAccount2" Height="400" Width="300" Background="LightGray">

    <Grid>
        <TextBox x:Name="AccountName" HorizontalAlignment="Center" Height="32" Margin="0,50,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="250"/>
        <Button x:Name="Save" Content="Save" HorizontalAlignment="Center" Height="30" Margin="-80,0,0,50" VerticalAlignment="Bottom" Width="50" Click="SaveNewAccount"/>
        <Button x:Name="Annuler" Content="Retour" HorizontalAlignment="Center" Height="30" Margin="80,0,0,50" VerticalAlignment="Bottom" Width="50" Click="Back"/>

    </Grid>
</Page>
