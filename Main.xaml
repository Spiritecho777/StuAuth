<Page x:Class="MFA.Main"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:MFA"
      mc:Ignorable="d" 
      Title="Main" Height="400" Width="300" Background="LightGray">

    <Grid>
        <Button x:Name="Add" Content="Add" Height="30" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="0,10,35,0" Width="30" Click="Add_Click"/>
        <ListView x:Name="AccountList" HorizontalAlignment="Center" Height="300" Margin="-15,45,0,0" VerticalAlignment="Top" Width="250">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <Button Height="30" Width="200"/>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </Grid>
</Page>
