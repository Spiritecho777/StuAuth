<Page x:Class="MFA.NewAccount"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:MFA"
      mc:Ignorable="d" 
      Title="NewAccount" Height="400" Width="300" Background="LightGray">

    <Grid>
        <Button x:Name="Retour" Content="Back" HorizontalAlignment="Left" VerticalAlignment="Top" Height="30" Margin="40,40,0,0" Width="30" Click="Back"/>
        <Button x:Name="Import" Content="Import" HorizontalAlignment="Right" VerticalAlignment="Top" Height="30" Margin="0,40,40,0" Width="50" Click="Import_Click"/>
        
        <TextBox x:Name="SecretKey" HorizontalAlignment="Right" VerticalAlignment="Top" Height="35" Margin="0,260,30,0" Width="240"/>
        
        <Button x:Name="QRcapture" Content="QRcode" HorizontalAlignment="Left" VerticalAlignment="Top" Height="30" Margin="60,320,0,0"  Width="80" Click="Capture"/>
        <Button x:Name="Valider" Content="Confirmer" HorizontalAlignment="Right" VerticalAlignment="Top" Height="30" Margin="0,320,60,0" Width="80" Click="Confirm"/>
    </Grid>
</Page>
