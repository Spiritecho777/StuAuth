<Page x:Class="StuAuth.NewAccount"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:StuAuth"
      xmlns:lang="clr-namespace:StuAuth.Classe"
      mc:Ignorable="d" 
      Title="NewAccount" Height="610" Width="410" Background="LightGray">

    <Page.Resources>
        <Style TargetType="Button" x:Key="ChargedButton">
            <Setter Property="Height" Value="30"/>
            <Setter Property="HorizontalAlignment" Value="Right"/>
            <Setter Property="VerticalAlignment" Value="Top"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="{TemplateBinding BorderThickness}" CornerRadius="5">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Page.Resources>

    <Grid>
        <Button x:Name="Retour" Content="{lang:Loc Back}" Margin="0,40,330,0" Width="50" Click="Back" Style="{StaticResource ChargedButton}"/>
        <Button x:Name="Import" Content="{lang:Loc Import}" Margin="0,40,40,0" Width="50" Click="Import_Click" Style="{StaticResource ChargedButton}"/>

        <Label Content="{lang:Loc Secret Key}" FontSize="20" HorizontalAlignment="Right" VerticalAlignment="Top" Height="35" Margin="0,392,40,0" Width="330"/>
        <TextBox x:Name="SecretKey" HorizontalAlignment="Right" VerticalAlignment="Top" Height="35" Margin="0,430,40,0" Width="330"/>

        <Button x:Name="QRcapture" Content="{lang:Loc QRCode}" Margin="0,500,210,0"  Width="80" Click="Capture" Style="{StaticResource ChargedButton}"/>
        <Button x:Name="Valider" Content="{lang:Loc Confirm}" Margin="0,500,100,0" Width="80" Click="Confirm" Style="{StaticResource ChargedButton}"/>
    </Grid>
</Page>
