<Page x:Class="StuAuth.Main"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:StuAuth"
      xmlns:lang="clr-namespace:StuAuth.Classe"
      mc:Ignorable="d" 
      Title="Main" Height="610" Width="410" Background="LightGray">

    <Page.Resources>
        <Style TargetType="Button" x:Key="CustomButton">
            <Setter Property="Height" Value="50"/>
            <Setter Property="Width" Value="315"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="{TemplateBinding BorderThickness}" CornerRadius="5">
                            <ContentPresenter HorizontalAlignment="Left" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <Style TargetType="Button" x:Key="ChargedButton">
            <Setter Property="Height" Value="30"/>
            <Setter Property="HorizontalAlignment" Value="Right"/>
            <Setter Property="VerticalAlignment" Value="Top"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="{TemplateBinding BorderThickness}" CornerRadius="5">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <Style x:Key="FlatComboBox" TargetType="ComboBox">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ComboBox">
                        <Border Background="{TemplateBinding Background}"
                        BorderBrush="{TemplateBinding BorderBrush}"
                        BorderThickness="{TemplateBinding BorderThickness}"
                        CornerRadius="10"
                        Padding="4">
                            <ContentPresenter Content="{TemplateBinding SelectionBoxItem}"
                                      VerticalAlignment="Center"
                                      HorizontalAlignment="Left" />
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Setter Property="Background" Value="LightGray"/>
            <Setter Property="BorderBrush" Value="Gray"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="4"/>
        </Style>
    </Page.Resources>

    <Grid>
        <Button x:Name="Add" Content="+" FontSize="20" Margin="0,10,135,0" Width="30" Click="Add_Click" Style="{StaticResource ChargedButton}"/>
        <Button x:Name="Del" Content="-" FontSize="20" Margin="0,10,100,0" ToolTip="{lang:Loc TTDelete}" Width="30" Click="Del_Click" Style="{StaticResource ChargedButton}"/>
        <Button Content="{lang:Loc Rename}" FontSize="15" Margin="0,10,307,0" Width="80" ToolTip="{lang:Loc TTRename}" Click="rename_Click" Style="{StaticResource ChargedButton}"/>
        <Button x:Name="Export" Content="{lang:Loc Export}" Margin="0,10,250,0" Width="50" Click="Export_Click" Style="{StaticResource ChargedButton}"/>
        <Button x:Name="ServeurConnect" Content="" FontSize="20" Margin="0,45,135,0" Width="30" Click="Serveur_Connect" ToolTip="{lang:Loc TTServer}" Background="Red" Style="{StaticResource ChargedButton}"/>
        <Button x:Name="A_propos" Content="?" Width="25" Margin="0,10,70,0" VerticalAlignment="Top" Click="Help_Click" Style="{StaticResource ChargedButton}"/>
        <Button x:Name="Synchro" Width="30" Margin="0,45,100,0" VerticalAlignment="Top" ToolTip="{lang:Loc TTHorloge}" Click="TimeSynchro" Style="{StaticResource ChargedButton}">
            <Image Source="\Icone\synchro.png" />
        </Button>
        <Label x:Name="FolderName" Content="" FontSize="20" Margin="0,45,180,0" Width="200" Height="40" VerticalAlignment="Top"/>
        <Button x:Name="Back" Content="&#60;--" Click="Back_Click" FontSize="20" Margin="0,45,37,0" Width="57" Style="{StaticResource ChargedButton}"/>
        <ComboBox x:Name="Language" FontSize="15" Margin="0,10,37,0" Width="30" Height=" 30" VerticalAlignment="Top" HorizontalAlignment="Right" SelectionChanged="LanguageSelector_SelectionChanged" Style="{StaticResource FlatComboBox}">
            <ComboBoxItem Tag="en">En</ComboBoxItem>
            <ComboBoxItem Tag="fr">Fr</ComboBoxItem>
        </ComboBox>
        <ListView x:Name="AccountList" HorizontalAlignment="Center" Height="465" Margin="-15,80,0,0" VerticalAlignment="Top" Width="350"/>
    </Grid>
</Page>
